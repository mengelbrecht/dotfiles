[alias]
	cleanup = clean -dxf
	restore = reset --hard HEAD
	wipe = !git restore && git cleanup
	svnc = svn clone
	svnf = svn fetch
	svnr = svn rebase
	svnd = svn dcommit
[branch]
	autosetuprebase = always
[core]
	quotepath = false
	autocrlf = input
	safecrlf = warn
	trustctime = false
	excludesfile = ~/.gitexcludes
[credential]
	helper = osxkeychain
[grep]
	lineNumber = true
[include]
	path = ~/.gitconfig.local
[pack]
	threads = 0
[push]
	default = simple
[svn]
	rmdir = true
