[branch]
	autosetuprebase = always
[core]
	quotepath = false
	autocrlf = input
	safecrlf = warn
	trustctime = false
	excludesfile = ~/.config/git/ignore
	pager = diff-so-fancy | less --tabs=4 -RFX
[grep]
	lineNumber = true
[include]
	path = ~/.config/git/config.local
[pack]
	threads = 0
[push]
	default = simple
	recurseSubmodules = check
[rebase]
	autoStash = true
[svn]
	rmdir = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[http]
	postBuffer = 524288000
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[stash]
	showPatch = true
[log]
	decorate = full
[pull]
	ff = only
[status]
	showUntrackedFiles = all
[diff]
	tool = icdiff
[difftool]
	prompt = false
[difftool "icdiff"]
	cmd = /usr/local/bin/icdiff --line-numbers $LOCAL $REMOTE
